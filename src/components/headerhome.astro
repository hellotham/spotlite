---
import { Image } from 'astro:assets'
import Avatar from '../assets/me/avatar.jpg'
import Navbar from './navbar.astro'
import Theme from './theme.astro'

const homestyle =
  '--header-position: sticky; --header-height: 180px; --header-mb: -116px; --avatar-image-transform: translate3d(0rem, 0, 0) scale(1); --avatar-border-transform: translate3d(-0.2222222222222222rem, 0, 0) scale(1.7777777777777777); --avatar-border-opacity: 0; --header-top: 0px; --avatar-top: 0px; '
---

<header
  class='flex flex-col pointer-events-none relative z-50'
  style={homestyle + 'height:var(--header-height);margin-bottom:var(--header-mb)'}
>
  <div class='mt-3 order-last'></div><div
    class='pt-3 top-0 order-last -mb-3 sm:px-8'
    style='position:var(--header-position)'
  >
    <div class='mx-auto max-w-7xl lg:px-8'>
      <div class='px-4 relative lg:px-12 sm:px-8'>
        <div class='mx-auto max-w-2xl lg:max-w-5xl'>
          <div class='w-full top-[var(--avatar-top)]' style='position:var(--header-inner-position)'>
            <div class='relative'>
              <div
                class='p-0.5 rounded-full bg-white/90 h-10 w-10 ring-1 ring-zinc-900/5 shadow-lg shadow-zinc-800/5 origin-left transition-opacity left-0 top-3 absolute backdrop-blur dark:bg-zinc-800/90 dark:ring-white/10'
                style='opacity:var(--avatar-border-opacity, 0);transform:var(--avatar-border-transform)'
              >
              </div>
              <a
                aria-label='Home'
                class='h-32 w-32 block pointer-events-auto origin-left'
                style='transform:var(--avatar-image-transform)'
                href='/'
                ><Image
                  src={Avatar}
                  alt='Avatar'
                  width={512}
                  class='rounded-full bg-zinc-100 h-32 w-32 object-cover dark:bg-zinc-800'
                  style='color:transparent'
                />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div><div class='pt-6 h-16 top-0 z-10' style='position:var(--header-position)'>
    <div
      class='w-full top-[var(--header-top)] sm:px-8'
      style='position:var(--header-inner-position)'
    >
      <div class='mx-auto max-w-7xl lg:px-8'>
        <div class='px-4 relative lg:px-12 sm:px-8'>
          <div class='mx-auto max-w-2xl lg:max-w-5xl'>
            <div class='flex gap-4 relative'>
              <div class='flex flex-1'></div>
              <Navbar />
              <Theme />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
