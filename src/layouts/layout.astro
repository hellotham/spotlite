---
import HeaderHome from '../components/headerhome.astro'
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'

export interface Props {
  title: string
  description: string
  home?: boolean
}

const { title, description, home = false } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='x-ua-compatible' content='ie=edge' />
    <meta name='viewport' content='width=device-width,initial-scale=1' />
    <link rel='icon' href='/favicon.ico' sizes='any' />
    <link rel='icon' href='/favicon.svg' type='image/svg+xml' />
    <link rel='apple-touch-icon' href='/apple-touch-icon.png' />
    <link rel='manifest' href='/site.webmanifest' />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <link rel='alternate' type='application/rss+xml' title='RSS' href='/rss.xml' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <meta name='description' content={description} />
    <script is:inline>
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
    <style is:inline>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>
  <body>
    <div
      class='font-sans bg-pink-50 flex flex-col h-full dark:bg-black'
      style={`--content-offset: ${home ? '116' : '0'}px;`}
    >
      <div class='flex inset-0 justify-center fixed sm:px-8'>
        <div class='flex max-w-7xl w-full lg:px-8'>
          <div class='bg-white w-full ring-1 ring-pink-100 dark:bg-zinc-900 dark:ring-pink-300/20'>
          </div>
        </div>
      </div>
      <div class='relative'>
        {home ? <HeaderHome /> : <Header />}
        <div style='height:var(--content-offset)'></div>
        <main>
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
