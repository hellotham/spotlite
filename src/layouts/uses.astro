---
import Layout from '../layouts/layout.astro'

interface Props {
  frontmatter: {
    title: string
    description: string
    list: {
      section: string
      items: {
        item: string
        description: string
      }[]
    }[]
  }
}

const { frontmatter } = Astro.props
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <div class='mt-16 sm:mt-32 sm:px-8'>
    <div class='mx-auto max-w-7xl lg:px-8'>
      <div class='px-4 relative lg:px-12 sm:px-8'>
        <div class='mx-auto max-w-2xl lg:max-w-5xl'>
          <header class='max-w-2xl'>
            <h1
              class='text-4xl text-pink-800 tracking-tight font-bold sm:text-5xl dark:text-pink-100'
            >
              {frontmatter.description}
            </h1><div class='text-base text-zinc-600 mt-6 dark:text-zinc-400'>
              <slot />
            </div>
          </header><div class='mt-16 sm:mt-20'>
            <div class='space-y-20'>
              {
                frontmatter.list.map((section) => (
                  <section
                    aria-labelledby=':R6l6:'
                    class='md:pl-6 md:border-l md:border-pink-100 md:dark:border-pink-700/40'
                  >
                    <div class='gap-y-8 grid grid-cols-1 max-w-3xl items-baseline md:grid-cols-4'>
                      <>
                        <h2
                          id=':R6l6:'
                          class='text-sm text-zinc-800 font-semibold dark:text-zinc-100'
                        >
                          {section.section}
                        </h2>
                        <div class='md:col-span-3'>
                          <ul class='space-y-16'>
                            {section.items.map((item) => (
                              <li class='group flex flex-col items-start relative'>
                                <h3 class='text-base text-zinc-800 tracking-tight font-semibold dark:text-zinc-100'>
                                  {item.item}
                                </h3>
                                <p class='text-sm text-zinc-600 mt-2 relative z-10 dark:text-zinc-400'>
                                  {item.description}
                                </p>
                              </li>
                            ))}
                          </ul>
                        </div>
                      </>
                    </div>
                  </section>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
